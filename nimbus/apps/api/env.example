# Nimbus API Configuration
# Copy this file to .env and customize for your environment

# Application Settings
NIMBUS_APP_NAME="Nimbus API"
NIMBUS_ENVIRONMENT="development"  # development, staging, production
NIMBUS_DEBUG=true
NIMBUS_LOG_LEVEL="INFO"

# Security - JWT Configuration
# IMPORTANT: Generate a secure random secret for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(64))"
NIMBUS_JWT_SECRET="your-super-secure-jwt-secret-min-32-chars"
NIMBUS_JWT_ALGORITHM="HS256"
NIMBUS_JWT_ACCESS_TTL_SECONDS=3600
NIMBUS_JWT_REFRESH_TTL_SECONDS=604800

# Security - API Keys (Deprecated - move to per-project)
NIMBUS_INGEST_API_KEY_ID="local-key-id"
NIMBUS_INGEST_API_KEY_SECRET="your-super-secure-ingest-secret"

# Database Configuration
NIMBUS_DATABASE_URL="postgresql+asyncpg://postgres:your_password@localhost:5432/nimbus"
NIMBUS_DB_POOL_SIZE=10
NIMBUS_DB_MAX_OVERFLOW=20
NIMBUS_DB_POOL_TIMEOUT=30

# Redis Configuration
NIMBUS_REDIS_URL="redis://localhost:6379/0"
NIMBUS_REDIS_POOL_SIZE=10

# CORS and Security
NIMBUS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"
NIMBUS_RATE_LIMIT_ENABLED=true
NIMBUS_RATE_LIMIT_PER_MINUTE=1000

# Feature Flags
NIMBUS_ENABLE_METRICS=true
NIMBUS_ENABLE_TRACING=false
NIMBUS_ENABLE_WEBSOCKETS=true
NIMBUS_ENABLE_BATCH_PROCESSING=true

# Production Settings (uncomment for production)
# NIMBUS_ENVIRONMENT="production"
# NIMBUS_DEBUG=false
# NIMBUS_LOG_LEVEL="WARNING"
# NIMBUS_RATE_LIMIT_PER_MINUTE=500